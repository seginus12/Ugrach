#!/bin/bash

set -e

# Configure /etc/hosts
HOSTNAME=$(hostname)
sudo sed -i "s/localhost/$HOSTNAME.edu.ugrasu/" /etc/hosts

# Join to domain
sudo net ads join -U Администратор

# Enable necessary services
sudo systemctl enable smbd.service --now
sudo systemctl enable winbind.service --now

# Enable pam profiles
sudo pam-auth-update --disable krb5 --enable unix winbind systemd mkhomedir --force

